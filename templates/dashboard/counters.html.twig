<div class="card h-100">
    <span class="bg-primary h-50 w-50 d-flex-center rounded-circle m-auto eshop-icon-box">
        <i class="ph ph-squares-four f-s-24"></i>
    </span>
    <div class="card-body d-flex align-items-center justify-content-center p-2">
        <div class="row g-0 w-100 text-center">
            <div class="col-6 border-end border-bottom py-2">
                <a href="{{ path('browse_targets') }}" class="text-decoration-none d-block">
                    <h3 class="text-primary mb-0">{{ targetRepo.count }}</h3>
                    <p class="mb-0 f-s-12 f-w-600 text-muted">{{ 'dashboard.counters.targets'|trans }}</p>
                </a>
            </div>
            <div class="col-6 border-bottom py-2">
                <a href="{{ path('sessions') }}" class="text-decoration-none d-block">
                    <h3 class="text-primary mb-0">{{ sessionRepo.count }}</h3>
                    <p class="mb-0 f-s-12 f-w-600 text-muted">{{ 'dashboard.counters.sessions'|trans }}</p>
                </a>
            </div>
            <div class="col-6 border-end py-2">
                <a href="{{ path('authors') }}" class="text-decoration-none d-block">
                    <h3 class="text-primary mb-0">{{ authorRepo.count }}</h3>
                    <p class="mb-0 f-s-12 f-w-600 text-muted">{{ 'dashboard.counters.authors'|trans }}</p>
                </a>
            </div>
            <div class="col-6 py-2">
                <a href="{{ path('observatories') }}" class="text-decoration-none d-block">
                    <h3 class="text-primary mb-0">{{ obsRepo.count }}</h3>
                    <p class="mb-0 f-s-12 f-w-600 text-muted">{{ 'dashboard.counters.observatories'|trans }}</p>
                </a>
            </div>
        </div>
    </div>
</div>
